# Helper scripts
bindsym $mod+b exec --no-startup-id $sp/rename.sh 0
bindsym $mod+Shift+b exec --no-startup-id $sp/rename.sh
bindsym --release Print exec --no-startup-id scrot -u 'Screenshot-%Y-%m-%d-%H-%M-%S-$wx$h_scrot.png' -e 'mv $f ~/pictures/private/screenshots/'

