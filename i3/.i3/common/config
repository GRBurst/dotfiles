bindsym $mod+$AltGr+colon exec firefox
#bindsym $mod+$AltGr+c exec termite -e finch
bindsym $mod+$AltGr+Delete exec rofi-choose-container
bindsym $mod+$AltGr+KP_Separator exec dropbox
